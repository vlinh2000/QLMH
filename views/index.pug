extends ./common

block content 
 if notif
  if notif.name.length > 1
   marquee="Hôm nay học môn " + notif.name[0] + " tiết " + notif.time[0] + " ở phòng " + notif.classroom[0] + " và môn " + notif.name[1] + " tiết " + notif.time[1] + " ở phòng " + notif.classroom[1] + " nhe sếp !"
  else
   marquee="Hôm nay học môn " + notif.name + " tiết " + notif.time + " ở phòng " + notif.classroom + " nhe sếp !"

 else 
  marquee="Hôm nay không có học nhe sếp !"

 a(class="btn btn-primary mb-5 mt-4" href="/subject/create" ) New Subject

 table.table
  th Tên Môn
  th Mã Môn
  th Tên Giáo Viên
  th Trạng Thái
  th Chi Tiết
 
  each sub in subjects 
   tr 
    td=sub.name
    td=sub.code
    td=sub.tcName
    if sub.status
     td
      i(class="zmdi zmdi-alert-triangle text-danger")     
    else
     td
      i(class="zmdi zmdi-check zmdi-hc-2x  text-success")
    td
     a(href="/subject/"+ sub.id) view



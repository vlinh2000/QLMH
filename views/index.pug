extends ./common

block content 
 .container-fluid.full-screen(id="full-index")
  .container-fluid.index
    if notif
     if notif.name.length > 1
      marquee(scrollamount="10" class="notif")
       .d-flex
        img(src='http://gickr.com/results2/anim_72727357-d301-9254-190a-382a08099920.gif', alt='gif maker', width="30px" height="30px")
        p.ml-2="Hôm nay học môn " + notif.name[0] + " tiết " + notif.time[0] + " ở phòng " + notif.classroom[0] + " và môn " + notif.name[1] + " tiết " + notif.time[1] + " ở phòng " + notif.classroom[1] + " nhe sếp !"
     else
      marquee(scrollamount="10" class="notif")
       .d-flex
        img(src='http://gickr.com/results2/anim_72727357-d301-9254-190a-382a08099920.gif', alt='gif maker', width="30px" height="30px")
        p.ml-2="Hôm nay học môn " + notif.name + " tiết " + notif.time + " ở phòng " + notif.classroom + " nhe sếp !"

    else 
     marquee(scrollamount="10" class="notif") 
      .d-flex
       img(src='http://gickr.com/results2/anim_72727357-d301-9254-190a-382a08099920.gif', alt='gif maker',  width="30px" height="30px")
       p.ml-2="Hôm nay không có học nha sếp !"
     
   
    .new-subject
     a(class="btn btn-primary mb-3 mt-4" href="/subject/create" ) New Subject
     button.btn.btn-primary.mb-3.mt-4.ml-2(onclick="show();") Xem Điểm
     i.zmdi.zmdi-playlist-audio.zmdi-hc-2x.ml-3.mt-4.imusic
      audio(src='/audio/VeQue.mp3' controls autoplay loop class='music')
     
    .container
     .row
      .group-filter.shadow-lg.col-12.col-sm-6
       label.text-white.mr-3 Năm học
        select.ml-2(name="year" form="year&term") 
         if year
           if year==="2019"
            option(selected value=year)=year+'-2020'
            option(value="2020")="2020-2021"
            option(value="rich")="codersx"
           else if year==="2020"
             option(value="2020" selected)="2020-2021"
             option(value="2019")="2019-2020"
             option(value="rich")="codersx"
           else
             option(value="2019")="2019-2020"
             option(value="2020")="2020-2021"
             option(value="rich" selected)="codersx"
         else 
          option(value="2019" selected) 2019-2020 
          option(value="2020") 2020-2021
          option(value="rich") codersx

       label.text-white Học kỳ 
        select.ml-2(name="term" form="year&term") 
         if term 
          each t in ['1','2','3','codersx']
           if t===term
            option(selected value=t)=t
           else
            option(value=t)=t 
         else
          option(value=1) 1
          option(value=2) 2
          option(value=3 selected) 3
          option(value="codersx") codersx
       form(action="/" method="POST" id="year&term" style="display:inline").ml-4
        button(type="submit").btn-primary Liet Ke

      .col-sm-2

      form.form-inline.mt-3.col-12.col-sm-4.p-0(action='/search')
       input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search' name='q')
       button.btn.btn-success.mt-2.my-sm-0(type='submit') Search


    table.table.mt-5.table-index
     th.text-white Tên Môn
     th.text-white Mã Môn
     th.text-white Tên Giáo Viên
     th.text-white Trạng Thái
     th.text-white Chi Tiết
   
     each sub in subjects 
      tr.text-white 
       td.text-white=sub.name
       td.text-white=sub.code
       td.text-white=sub.tcName
       if sub.total === 0
        td.text-white
         i.zmdi.zmdi-notifications-none.zmdi-hc-lg.icNof.text-primary     
       else
        td.text-white
         .notification
          i.zmdi.zmdi-notifications.zmdi-hc-lg.icNof.text-primary
          p.total=sub.total  
       td.text-white
        a(href="/subject/"+ sub.id) view

 iframe(class="ctu-result" id="ctu-view" src="https://qldt.ctu.edu.vn/htql/sinhvien/qldiem/codes/index.php?mID=201" title="W3Schools Free Online Web Tutorials" width="1000px" height="500px")
 i.zmdi.zmdi-close-circle(id ="iclose" class="ic-close" onclick="stop();")
 

  
 script.
  function show(){
  var iframe =document.getElementById("ctu-view");
  var body = document.getElementById("full-index")
  body.style.filter="brightness(50%)" ;
  iframe.style.display="block";
  iframe.style.filter="gayscale(20%)";
   var icon = document.getElementById("iclose");
  icon.style.display="block";
  }

  function stop(){
  var iframe =document.getElementById("ctu-view");
  var body = document.getElementById("full-index");
  body.style.filter="none" ;
  iframe.style.display="none";
  iframe.style.filter="none";
  var icon = document.getElementById("iclose");
  icon.style.display="none";
  }

 

